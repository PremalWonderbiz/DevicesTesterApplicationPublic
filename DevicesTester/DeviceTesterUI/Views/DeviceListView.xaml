<UserControl x:Class="DeviceTesterUI.Views.DeviceListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DeviceTesterUI.Animations"
             xmlns:conv="clr-namespace:DeviceTesterUI.Converters"
             Background="White">
    <UserControl.Resources>
        <conv:BoolToBrushConverter x:Key="BoolToBrushConverter"/>
        <conv:BooleanNegationConverter x:Key="BooleanNegationConverter"/>
    </UserControl.Resources>
    <Grid>
        <DataGrid x:Name="DeviceDataGrid"
          ItemsSource="{Binding List.Devices}"
          SelectedItem="{Binding List.SelectedDevice, Mode=TwoWay}"
          AutoGenerateColumns="False"
          HeadersVisibility="Column"
          CanUserAddRows="False"
          Margin="5"
          FontSize="10"
          ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.HorizontalScrollBarVisibility="Auto"
          IsReadOnly="True"
          GridLinesVisibility="None"
          BorderBrush="LightGray"
          HorizontalAlignment="Stretch"
                  SelectionMode="Single"
                  IsEnabled="{Binding IsDeviceDetailsBusy, Converter={StaticResource BooleanNegationConverter}}">

            <DataGrid.ColumnHeaderStyle>
                <Style TargetType="DataGridColumnHeader">
                    <Setter Property="Padding" Value="5"/>
                </Style>
            </DataGrid.ColumnHeaderStyle>

            <DataGrid.CellStyle>
                <Style TargetType="DataGridCell">
                    <Setter Property="BorderBrush" Value="LightGray"/>
                </Style>
            </DataGrid.CellStyle>

            <DataGrid.Columns>
                <DataGridTextColumn Header="Agent" Binding="{Binding Agent}" Width="*" >
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="IP Address" Binding="{Binding IpAddress}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTextColumn Header="Port" Binding="{Binding Port}" Width="*">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="Padding" Value="5"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>

                <DataGridTemplateColumn Header="Common Operations" Width="2*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <UniformGrid Rows="1" Columns="2" HorizontalAlignment="Left" Margin="5,2">
                                <Button Content="Authenticate" 
                                Command="{Binding DataContext.AuthenticateCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}" 
                                Padding="5,2" Margin="2,0" />

                                <Button Content="Delete" 
                                Command="{Binding DataContext.DeleteCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}" 
                                Padding="5,2" Margin="2,0" />
                            </UniformGrid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Authenticated" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Ellipse x:Name="AuthEllipse"
                         Width="12"
                         Height="12"
                         VerticalAlignment="Center"
                         Fill="{Binding IsAuthenticated, Converter={StaticResource BoolToBrushConverter}}"
                         Visibility="Visible"/>

                                <local:LoadingSpinner x:Name="AuthSpinner"
                                      SpinnerSize="14"
                                      StrokeThickness="2"
                                      ArcBrush="#424242"
                                      BackgroundBrush="#33000000"
                                      ArcLength="20"
                                      RotationDuration="0:0:1"
                                      Visibility="Collapsed"/>
                            </Grid>

                            <DataTemplate.Triggers>
                                <DataTrigger Binding="{Binding IsAuthenticated}" Value="{x:Null}">
                                    <Setter TargetName="AuthSpinner" Property="Visibility" Value="Visible"/>
                                    <Setter TargetName="AuthEllipse" Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </DataTemplate.Triggers>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
